<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tutorial.fananim.MainActivity">

    <ImageView
            android:id="@+id/fan_img"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:src="@drawable/fan"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/fan_img"
            android:layout_marginStart="32dp"/>
    <Button
            android:text="One"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speed_btn1"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/start_btn"
            app:layout_constraintStart_toStartOf="@+id/start_btn" app:layout_constraintEnd_toEndOf="@+id/start_btn"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="Two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speed_btn2"
            app:layout_constraintTop_toTopOf="@+id/speed_btn1" app:layout_constraintEnd_toEndOf="@+id/stop_btn"
            app:layout_constraintStart_toStartOf="@+id/stop_btn" android:layout_marginStart="8dp"/>
    <Button
            android:text="Three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speed_btn3"
            app:layout_constraintStart_toStartOf="@+id/speed_btn1" app:layout_constraintEnd_toEndOf="@+id/speed_btn1"
            android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/speed_btn1"/>
    <Button
            android:text="Four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speed_btn4"
            app:layout_constraintTop_toTopOf="@+id/speed_btn3"
            app:layout_constraintStart_toStartOf="@+id/speed_btn2"
            app:layout_constraintEnd_toEndOf="@+id/speed_btn2"/>
    <Button
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stop_btn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintTop_toTopOf="@+id/start_btn"/>

</android.support.constraint.ConstraintLayout>
